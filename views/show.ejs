<%- include ("partials/header") %>

<div class="ui text container segment ">
    <h1 class="ui header"><%= blog.title%></h1>
    <div class="ui top attached">
        <div class="item">
            <img src="<%=blog.image%>" class="ui image centered rounded">
            <div class="content">
                <div class="meta">
                   <span>Created On: <%=blog.added.toDateString()%></span>
                </div>
                <div class="description">
                    <%-blog.body%>
                </div>
                <div class="ui buttons">
                    <a href="/blogs/<%=blog.id%>/edit"><button class="ui button large green inverted">Update</button></a>
                    <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                    <button type="submit" class="ui large red inverted button">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ("partials/footer") %>