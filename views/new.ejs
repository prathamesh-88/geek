<%- include ("partials/header") %>
<div class="ui container text segment">
    <h1 class="ui header">New Blog</h1>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label>Title:</label>
            <input type="text" name="blog[title]" placeholder="Enter title">
        </div>
        <div class="field">
            <label>Image:</label>
            <input type="text" name="blog[image]" placeholder="Enter image url">
        </div>
        <div class="field">
            <label>Blog:</label>
            <textarea name="blog[body]" placeholder="Enter the blogpost"></textarea>
        </div>
        <div class="field">
            <input type="submit" class="ui button inverted big red">
        </div>
    </form>

</div>

<%- include ("partials/footer") %>